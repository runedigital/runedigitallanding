<body>

    <div id="terminal">
        <div id="log-container"></div>
        
        <div id="input-line" style="display:none; margin-top: 20px; border-top: 1px dashed #333; padding-top: 20px;">
            <span>root@rune:~$ enter_id </span>
            <!-- REPLACE THE ACTION URL BELOW WITH YOUR FORMSPREE URL -->
            <form id="signup-form" action="https://formspree.io/f/xeowgdnn" method="POST" style="display:inline;">
                <input type="email" name="email" id="email-input" autocomplete="off" spellcheck="false" autofocus>
            </form>
            <span class="cursor"></span>
        </div>

        <div id="success-msg">
            >> ID VERIFIED.<br>
            >> UPLINK ESTABLISHED.<br>
            >> RESUMING STREAM...
        </div>
    </div>

    <script>
        // CONFIG
        const logs = [
            { text: ">> DETECTING SIGNAL...", delay: 500 },
            { text: ">> CONNECTION UNSTABLE", delay: 1200, cls: "alert" },
            { text: ">> BANDWIDTH LIMIT EXCEEDED", delay: 2000 },
            { text: ">> PROTOCOL 7: IDENTITY VERIFICATION REQUIRED", delay: 2800 },
            { text: ">> ENTER EMAIL TO BYPASS LOCK:", delay: 3500, cls: "highlight" }
        ];

        const container = document.getElementById('log-container');
        const inputLine = document.getElementById('input-line');
        const emailInput = document.getElementById('email-input');
        const form = document.getElementById('signup-form');
        const successMsg = document.getElementById('success-msg');

        // BOOT SEQUENCE
        let timer = 0;
        logs.forEach(log => {
            setTimeout(() => {
                const div = document.createElement('div');
                div.innerHTML = log.text; // allows HTML classes
                div.className = "line visible " + (log.cls || "");
                container.appendChild(div);
            }, log.delay);
            timer = Math.max(timer, log.delay);
        });

        // SHOW INPUT
        setTimeout(() => {
            inputLine.style.display = 'block';
            emailInput.focus();
        }, timer + 500);

        // HANDLE SUBMIT
        form.addEventListener('submit', async function(e) {
            e.preventDefault(); // Stop standard redirect
            
            if(!emailInput.value.includes('@')) return; // Basic validation

            // UI FEEDBACK
            inputLine.style.display = 'none';
            container.innerHTML += `<div class="line visible">> VERIFYING: ${emailInput.value}...</div>`;
            
            // SEND DATA (AJAX)
            const data = new FormData(form);
            try {
                await fetch(form.action, {
                    method: form.method,
                    body: data,
                    headers: { 'Accept': 'application/json' }
                });
            } catch(err) {
                console.log('Offline mode simulation');
            }

            // SUCCESS STATE
            setTimeout(() => {
                successMsg.style.display = 'block';
            }, 1000);
        });

        // CLICK ANYWHERE TO FOCUS
        document.body.addEventListener('click', () => emailInput.focus());

    </script>
</body>
</html>
